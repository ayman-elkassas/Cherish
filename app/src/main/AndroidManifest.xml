<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ayman.cherish">

    <application
        android:allowBackup="true"
        android:icon="@drawable/color_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name=".activities.splashScreen.LoadingScreen"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Profile.Profile" />
        <activity android:name=".activities.onBoarding.OnBoardingActivity" />
        <activity android:name=".activities.register.SignInActivity" />
        <activity android:name=".activities.register.SignUpActivity" />
        <activity android:name=".activities.accountSetup.AccountSetup" />
    </application>

</manifest>