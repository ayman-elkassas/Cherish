                <!--app:layout_constraintTop_toBottomOf="@+id/postType">-->

                <!---->

            <!--</android.support.v7.widget.CardView>-->
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>